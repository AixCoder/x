<%# ============================================
   播放页面 - 音频播放器
   ============================================ %>

<%# Flash 消息容器 %>
<div id="flash-container"></div>

<%# 返回首页按钮 %>
<%= link_to root_path, class: "back-to-home-button", data: { turbo_action: "restore" } do %>
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" width="20" height="20">
    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
  </svg>
  返回首页
<% end %>

<%# 外层容器 %>
<div>
  <%# 导航栏

  %>
  <%= render "shared/nav_bar" %>

  <%# Join 按钮（右上角）- 链接到极简登录页 %>
  <%= link_to simple_login_path, class: "nav-join-btn player-join-btn", data: { turbo: true } do %>
    Join
  <% end %>

  <%# 播放页面内容 %>
  <div class="simple-player-page" data-controller="audio-player">
    <%# 音频元素 %>
    <audio data-audio-player-target="audio" preload="none">
      <source src="https://aqqmusic.tc.qq.com/C400000qqas91NqBEM.m4a?guid=2044384204&vkey=C08C041AA5862D3B87DB0B01852E894DAD02C016EC726BCB7006BE3279AF6D5B1D2AC1E6093AD2C89D7EFBB5A82154B397E8D17880D03CE3__v2b93270e&uin=&fromtag=123032" type="audio/mp4">
    </audio>

    <%# 播放按钮 %>
    <button type="button" class="play-audio-btn" data-action="click->audio-player#toggle" data-audio-player-target="button">
      <span class="play-icon" data-audio-player-target="playIcon">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" width="48" height="48">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z" />
        </svg>
      </span>
      <span class="pause-icon hidden" data-audio-player-target="pauseIcon">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" width="48" height="48">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25v13.5m-7.5-13.5v13.5" />
        </svg>
      </span>
    </button>

    <%# 播放状态提示 %>
    <p class="audio-status" data-audio-player-target="status">点击播放</p>
  </div>
</div>

<%# 页面样式 %>
<style>
  /* Flash 消息 */
  .flash-message {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-size: 0.875rem;
    text-align: center;
    z-index: 1000;
    animation: fadeInDown 0.3s ease;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateX(-50%) translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
  }

  .flash-notice {
    background-color: #dcfce7;
    color: #16a34a;
    border: 1px solid #bbf7d0;
  }

  /* 返回首页按钮 */
  .back-to-home-button {
    position: fixed;
    top: 1.5rem;
    left: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    color: #374151;
    font-size: 0.875rem;
    text-decoration: none;
    z-index: 100;
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .back-to-home-button:hover {
    background: #f9fafb;
    border-color: #d1d5db;
    transform: translateX(-2px);
  }

  /* Join 按钮 - 播放器页面专用（右上角） */
  .nav-join-btn.player-join-btn {
    position: fixed;
    top: 1.5rem;
    right: 1.5rem;
    left: auto;
    font-family: var(--font-sans, "Montserrat", sans-serif);
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.8);
    background: none;
    border: none;
    cursor: pointer;
    z-index: 40;
    transition: color 0.2s;
  }

  .nav-join-btn.player-join-btn:hover {
    color: white;
  }

  /* 导航栏样式 - 播放器页面 */
  .nav-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 1rem 2rem;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    z-index: 100;
    background: transparent;
  }

  .auth-links,
  .user-info {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .user-profile-link {
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .user-profile-link:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .user-nickname {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
  }

  .nav-button {
    padding: 0.5rem 1.25rem;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
    font-family: inherit;
  }

  .login-button {
    background: white;
    color: #374151;
    border: 1px solid #d1d5db;
  }

  .login-button:hover {
    background: #f9fafb;
    border-color: #9ca3af;
  }

  .signup-button {
    background: #DC4C3E;
    color: white;
  }

  .signup-button:hover {
    background: #c93f32;
  }

  .logout-button {
    background: transparent;
    color: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .logout-button:hover {
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }

  /* 播放页面 */
  .simple-player-page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  /* 播放按钮 */
  .play-audio-btn {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: white;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
    color: #667eea;
  }

  .play-audio-btn:hover {
    transform: scale(1.1);
    box-shadow: 0 15px 50px rgba(0, 0, 0, 0.4);
  }

  .play-audio-btn:active {
    transform: scale(0.95);
  }

  .play-audio-btn.playing {
    background: #667eea;
    color: white;
  }

  /* 图标显示控制 */
  .hidden {
    display: none !important;
  }

  /* 播放状态文字 */
  .audio-status {
    margin-top: 2rem;
    color: white;
    font-size: 1rem;
    opacity: 0.9;
  }
</style>
