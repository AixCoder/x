<%# 用户资料编辑页面 %>
<div class="profile-container">
  <div class="profile-card">
    <h1 class="profile-title">编辑资料</h1>

    <%= form_with model: @user, url: profile_path, local: true, class: "profile-form" do |f| %>
      <% if @user.errors.any? %>
        <div class="error-messages">
          <% @user.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
          <% end %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :email, "邮箱", class: "form-label" %>
        <%= f.email_field :email, class: "form-input", disabled: true %>
        <span class="form-hint">邮箱不可修改</span>
      </div>

      <div class="form-group">
        <%= f.label :nickname, "昵称", class: "form-label" %>
        <%= f.text_field :nickname, class: "form-input", placeholder: "给自己起个昵称吧", maxlength: 20 %>
        <span class="form-hint">分享卡片时会显示你的昵称</span>
      </div>

      <div class="form-divider">
        <span>修改密码（留空表示不修改）</span>
      </div>

      <div class="form-group">
        <%= f.label :password, "新密码", class: "form-label" %>
        <%= f.password_field :password, class: "form-input", placeholder: "请输入新密码" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "确认新密码", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-input", placeholder: "再次输入新密码" %>
      </div>

      <div class="form-actions">
        <%= link_to "取消", root_path, class: "btn btn-secondary" %>
        <%= f.submit "保存修改", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .profile-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: linear-gradient(135deg, #fef9f3 0%, #fff5eb 100%);
  }

  .profile-card {
    background: white;
    border-radius: 24px;
    padding: 2.5rem;
    width: 100%;
    max-width: 420px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08);
  }

  .profile-title {
    font-family: "Cormorant Garamond", serif;
    font-size: 1.75rem;
    color: #292524;
    text-align: center;
    margin-bottom: 2rem;
    font-weight: 600;
  }

  .profile-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    font-family: "Montserrat", sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
  }

  .form-input {
    padding: 0.75rem 1rem;
    border: 1px solid #e5e7eb;
    border-radius: 10px;
    font-family: "Montserrat", sans-serif;
    font-size: 0.9375rem;
    transition: all 0.2s ease;
    background: #fafafa;
  }

  .form-input:focus {
    outline: none;
    border-color: #DC4C3E;
    background: white;
    box-shadow: 0 0 0 3px rgba(220, 76, 62, 0.1);
  }

  .form-input:disabled {
    background: #f3f4f6;
    color: #9ca3af;
    cursor: not-allowed;
  }

  .form-hint {
    font-size: 0.75rem;
    color: #a8a29e;
    font-family: "Montserrat", sans-serif;
  }

  .form-divider {
    display: flex;
    align-items: center;
    margin: 1rem 0;
    color: #a8a29e;
    font-size: 0.75rem;
    font-family: "Montserrat", sans-serif;
  }

  .form-divider::before,
  .form-divider::after {
    content: "";
    flex: 1;
    height: 1px;
    background: #e5e7eb;
  }

  .form-divider span {
    padding: 0 1rem;
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .btn {
    flex: 1;
    padding: 0.875rem;
    border-radius: 10px;
    font-family: "Montserrat", sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
  }

  .btn-primary {
    background: #DC4C3E;
    color: white;
  }

  .btn-primary:hover {
    background: #c93f32;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(220, 76, 62, 0.3);
  }

  .btn-secondary {
    background: #f3f4f6;
    color: #6b7280;
  }

  .btn-secondary:hover {
    background: #e5e7eb;
    color: #374151;
  }

  .error-messages {
    background: #fef2f2;
    border: 1px solid #fecaca;
    border-radius: 10px;
    padding: 1rem;
    margin-bottom: 1rem;
  }

  .error-messages p {
    color: #DC4C3E;
    font-size: 0.875rem;
    margin: 0;
    font-family: "Montserrat", sans-serif;
  }
</style>
